# Backend Configuration
# Choose which backend provider to use: 'firebase' or 'supabase'
NEXT_PUBLIC_BACKEND_PROVIDER=firebase

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Use these when NEXT_PUBLIC_BACKEND_PROVIDER=firebase

# Client-side Firebase config (public)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id

# Server-side Firebase config (keep secret)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Use these when NEXT_PUBLIC_BACKEND_PROVIDER=supabase

# Client-side Supabase config (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side Supabase config (keep secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# OTHER CONFIGURATIONS (unchanged)
# ============================================

# Email configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# API Integrations
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
MAPMYRIDE_CLIENT_ID=your_mapmyride_client_id
MAPMYRIDE_CLIENT_SECRET=your_mapmyride_client_secret

# Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key

# Google Cloud (for Firebase App Hosting)
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
