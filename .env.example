# ============================================
# BACKEND CONFIGURATION
# ============================================
# Choose your backend provider: 'firebase' or 'supabase'
# This determines which backend system your application uses
NEXT_PUBLIC_BACKEND_PROVIDER=firebase

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Use these when NEXT_PUBLIC_BACKEND_PROVIDER=firebase

# Client-side Firebase config (public - safe to expose to browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Server-side Firebase config (keep secret)
# These are used by Firebase Admin SDK on the server
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Use these when NEXT_PUBLIC_BACKEND_PROVIDER=supabase

# Client-side Supabase config (public - safe to expose to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side Supabase config (keep secret)
# This key has elevated privileges and should NEVER be exposed to the client
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# AI / OPENAI CONFIGURATION
# ============================================
# OpenAI API key for AI features
# Used for component recognition, vector embeddings, chat, etc.
OPENAI_API_KEY=your_openai_api_key
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# ============================================
# EMAIL CONFIGURATION
# ============================================
# SMTP settings for sending emails (verification, notifications, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Strava API (for activity imports)
NEXT_PUBLIC_STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret

# MapMyRide API (for activity imports)
MAPMYRIDE_CLIENT_ID=your_mapmyride_client_id
MAPMYRIDE_CLIENT_SECRET=your_mapmyride_client_secret

# OpenWeather API (for weather data)
OPENWEATHER_API_KEY=your_openweather_api_key

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Base URL for your deployed application (used for OAuth redirects, etc.)
NEXT_PUBLIC_BASE_URL=https://your-app.netlify.app

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' or 'production'
NODE_ENV=development

# ============================================
# BACKEND SWITCHING GUIDE
# ============================================
#
# To switch from Firebase to Supabase:
# 1. Set NEXT_PUBLIC_BACKEND_PROVIDER=supabase
# 2. Ensure all SUPABASE_* variables are set
# 3. Run npm run build
# 4. Deploy
#
# To switch back to Firebase:
# 1. Set NEXT_PUBLIC_BACKEND_PROVIDER=firebase
# 2. Ensure all FIREBASE_* variables are set
# 3. Run npm run build
# 4. Deploy
#
# The application code remains the same - only the environment variable changes!
#
# ============================================
