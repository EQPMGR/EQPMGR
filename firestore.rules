rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data in their own document
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Bike models and master components are public read, but only authenticated users can write
    match /bikeModels/{bikeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
