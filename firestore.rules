rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lock down the users collection so that only the authenticated user can read/write their own documents
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
      
      // Also allow the user to read/write to subcollections of their own user document
       match /{allPaths=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // masterComponents can be read/written by any authenticated user for seeding/admin purposes.
    match /masterComponents/{docId} {
        allow read, write: if request.auth != null;
    }
    
    // bikeModels can be read/written by any authenticated user for admin purposes.
    match /bikeModels/{docId} {
        allow read, write: if request.auth != null;
    }
    
    // trainingData can be written by any authenticated user for RLHF data collection.
    match /trainingData/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
