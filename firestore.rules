
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Master components are public and can be read by anyone.
    // Writes should still be restricted, but for now this allows the seeder to work.
    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if request.auth != null; // Keep writes restricted for now
    }
    
    // User-specific data can only be read/written by the authenticated user.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
