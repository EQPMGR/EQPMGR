rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows a user to read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Rules for subcollections must be nested inside the parent document match.
      // This allows a user to manage the equipment within their own user document.
      match /equipment/{equipmentId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // These collections are public.
    // Anyone can read them, but writes are disallowed from the client.
    match /bikeModels/{bikeId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only from authenticated server-side actions
    }

    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only from authenticated server-side actions
    }
  }
}
