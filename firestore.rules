
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Logged-in users can read from the master data collections
    match /masterComponents/{component} {
      allow read: if request.auth != null;
    }
    match /bikeModels/{bike} {
      allow read: if request.auth != null;
    }
    match /serviceProviders/{provider} {
      allow read: if request.auth != null;
    }

    // Users can only read and write their own documents in the 'users' collection
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Users can only read and write the components in their own equipment subcollections
    match /users/{userId}/equipment/{equipmentId}/components/{componentId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to create equipment documents
    match /users/{userId}/equipment/{equipmentId} {
      allow create, read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny access to the trainingData collection from the client
    match /trainingData/{docId} {
      allow read, write: if false;
    }
    // Deny access to the ignoredDuplicates collection from the client
    match /ignoredDuplicates/{docId} {
      allow read, write: if false;
    }
  }
}
