
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Shared Data
    match /masterComponents/{document=**} {
      allow read: if request.auth != null;
      // Allow create only for authenticated users, but not update/delete
      allow create: if request.auth != null;
      allow update, delete: if false; 
    }
    
    match /bikeModels/{document=**} {
        allow read: if request.auth != null;
        allow write: if false; // Only admin should write these
    }

    // User-specific Data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to write to training data
     match /trainingData/{document=**} {
        allow write: if request.auth != null;
        allow read: if false;
    }
  }
}
