
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to bike models and master components for the app to function.
    match /bikeModels/{bikeId} {
      allow read: if true;
    }

    match /masterComponents/{componentId} {
      // Allow authenticated users to read.
      allow read: if request.auth != null;
      // Allow authenticated users to write (create, update, delete) to masterComponents.
      // This is necessary for the vector indexing and admin tools to work.
      allow write: if request.auth != null;
    }
    
    match /ignoredDuplicates/{docId} {
      allow read, write: if request.auth != null;
    }

    match /serviceProviders/{providerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /trainingData/{dataId} {
      allow write: if request.auth != null;
    }

    // Lock down user data so only the user can access their own documents.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // Allow users to manage their own subcollections.
      match /{allChildren=**} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
