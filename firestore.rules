
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own document.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Allow any authenticated user to read all bike models and components.
    match /bikeModels/{modelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /masterComponents/{componentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Deny all other reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
