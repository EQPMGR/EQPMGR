
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /equipment/{equipmentId} {
      // A user can create equipment if the ownerId in the new document matches their own uid.
      allow create: if request.auth.uid == request.resource.data.ownerId;
      
      // A user can get, update, or delete a specific document if they are the owner.
      allow get, update, delete: if request.auth.uid == resource.data.ownerId;

      // A user can list (query) the equipment collection.
      // The client-side query MUST restrict this to only their own equipment.
      // This rule allows the query to execute.
      allow list: if request.auth.uid != null;
    }
  }
}
