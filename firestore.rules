
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to read shared data
    match /bikeModels/{bikeId} {
      allow read: if request.auth != null;
    }
    
    match /masterComponents/{componentId} {
      allow read: if request.auth != null;
      // Allow creation only from authenticated users (for manual component adds)
      // Disallow update/delete from clients to protect the master list.
      allow create: if request.auth != null;
    }

    // Allow users to read and write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
