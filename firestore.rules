rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public collections that any authenticated user can read from.
    // Write access is also given for the admin tools to add new models.
    match /bikeModels/{modelId} {
        allow read, write: if request.auth != null;
    }

    match /masterComponents/{componentId} {
        allow read, write: if request.auth != null;
    }
  }
}
