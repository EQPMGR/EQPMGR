rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read/write the central bike and component databases.
    // This is safe because this data is not user-specific.
    match /(bikeModels|masterComponents)/{docId} {
      allow read, write: if request.auth != null;
    }

    // Users can only read/write their own data within the users collection.
    // This is a critical security rule to protect user privacy.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
