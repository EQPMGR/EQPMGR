rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles: users can only read/write their own profile.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Equipment: A user can create a document if they are setting themselves as the owner.
    // They can read, update, or delete a document if they are the owner.
    match /equipment/{equipmentId} {
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth.uid == request.resource.data.ownerId;
    }
  }
}
