
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow any authenticated user to read from shared collections.
    // Writes are handled by server-side logic with the Admin SDK.
    match /masterComponents/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Disallow all client writes
    }

    match /bikeModels/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Disallow all client writes
    }
    
    // Lock down user data to only the authenticated user
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
