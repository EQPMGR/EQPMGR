rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // bikeModels can be read by anyone, but only written to by authenticated users.
    // This allows the "Add Equipment" dialog to function for all users,
    // and the admin panel to work for authenticated users.
    match /bikeModels/{bikeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // masterComponents can be read by anyone, but only written to by authenticated users.
    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
