
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC COLLECTIONS
    match /bikeModels/{modelId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // USER-SPECIFIC DATA
    match /users/{userId} {
      // Users can only read and write to their own user document.
      allow read, write: if request.auth.uid == userId;

      // Rules for equipment subcollection
      match /equipment/{equipmentId} {
        // Users can only manage equipment under their own user document.
        allow read, write, delete: if request.auth.uid == userId;

        // Rules for components sub-subcollection
        match /components/{componentId} {
           // Users can only manage components for equipment they own.
           allow read, write, create, delete: if request.auth.uid == userId;
        }
      }
    }
  }
}
