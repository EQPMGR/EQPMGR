
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Equipment collection rules
    match /equipment/{equipmentId} {
      // A user can GET a document if they are the owner.
      allow get: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // A user can LIST documents if they are logged in.
      // Security is enforced by the client-side query which filters by ownerId.
      allow list: if request.auth != null;

      // A user can CREATE a document if they are logged in and the new
      // document's ownerId matches their own UID.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // A user can UPDATE a document if they are the owner.
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // Deletes are not allowed for now.
      allow delete: if false;
    }
  }
}
