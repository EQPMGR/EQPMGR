
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Allow authenticated users to write to the test collection
    match /test/{docId} {
      allow read, write: if request.auth.uid != null;
    }
    
    // Allow authenticated users to write to the bike models collection
    match /bikeModels/{docId} {
      allow read, write: if request.auth.uid != null;
    }
    
    // Allow authenticated users to write to the master components collection
    match /masterComponents/{docId} {
      allow read, write: if request.auth.uid != null;
    }
  }
}
