rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to masterComponents.
    // This is needed for the admin seeding and component creation.
    match /masterComponents/{componentId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to write to aiTrainingData
    match /aiTrainingData/{dataId} {
        allow write: if request.auth != null;
    }
  }
}
