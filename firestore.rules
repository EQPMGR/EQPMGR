
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for the debug page test
    match /test/{docId} {
      allow read, write: if true;
    }

    // Secure rules for the rest of the app
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /equipment/{equipmentId} {
      // A user can create equipment if they are logged in and they are the owner
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // A user can read, update, or delete their own equipment
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}
