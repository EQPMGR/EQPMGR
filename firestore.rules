rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Bike models are public for reading, but not for writing from the client.
    match /bikeModels/{bikeId} {
      allow read: if true;
      allow write: if false; 
    }

    // Master components are public for reading, but not for writing from the client.
    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if false;
    }
  }
}