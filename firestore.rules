rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow authenticated users to read and write to bikeModels and masterComponents
    match /bikeModels/{bikeModelId} {
        allow read, write: if request.auth != null;
    }

    match /masterComponents/{componentId} {
        allow read, write: if request.auth != null;
    }

    // A test collection that anyone can write to, useful for debugging.
    match /test/{docId} {
      allow write: if true;
    }
  }
}
