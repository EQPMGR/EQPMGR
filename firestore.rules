rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and server-side write access to master components.
    // Writes are still restricted from the client-side unless authenticated,
    // but this allows our server flow to update embeddings.
    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if true; 
    }
    
    // Lock down user data to only the authenticated user
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
