rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for logos: Public read, restricted write
    match /logos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default rule for all other paths: No access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
