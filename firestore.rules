rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public collections that anyone can read.
    // Writes should only come from trusted server-side code (like our server actions),
    // which we ensure are initiated by authenticated users.
    match /bikeModels/{modelId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /masterComponents/{componentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
