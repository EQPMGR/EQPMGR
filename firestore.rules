rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId; // Allow users to update their own profile

      // Allow access to the equipment subcollection for the logged-in user
      match /equipment/{equipmentId} {
        allow get, list, create, update, delete: if request.auth.uid == userId;

        // Allow access to the components sub-subcollection
        match /components/{componentId} {
            allow get, list, create, update, delete: if request.auth.uid == userId;
        }
      }
    }

    // Rules for public/shared data
    match /bikeModels/{bikeModelId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // For admin functions
    }

    match /masterComponents/{componentId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // For admin/server functions
    }
  }
}
