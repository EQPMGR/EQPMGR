rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can only read/write their own document
      allow read, write: if request.auth.uid == userId;

      // Rules for subcollections of a user document must be nested inside
      match /equipment/{equipmentId} {
        // Users can manage their own equipment documents
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    match /bikeModels/{bikeId} {
      // Allow public read access to bike models
      allow read: if true;
      // Disallow public write access from clients
      allow write: if false;
    }

    match /masterComponents/{componentId} {
      // Allow public read access
      allow read: if true;
      // Allow any authenticated user to write.
      // This is secure because only our server actions perform these writes.
      allow write: if request.auth != null;
    }
  }
}
