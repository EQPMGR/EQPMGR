
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Bike Models are public, but only authenticated users can modify them.
    match /bikeModels/{bike} {
      allow read: true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Master Components are public, but only authenticated users can modify them.
    match /masterComponents/{component} {
      allow read: true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
