rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to read all bike models.
    match /bikeModels/{bike} {
      allow read: if request.auth != null;
      // Allow any authenticated user to create/update bike models.
      allow write: if request.auth != null;
    }

    // Allow any authenticated user to read all master components.
    match /masterComponents/{component} {
      allow read: if request.auth != null;
      // Allow any authenticated user to create/update components.
      allow write: if request.auth != null;
    }
  }
}
